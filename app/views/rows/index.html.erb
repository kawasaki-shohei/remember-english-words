<p id="notice"><%= notice %></p>

<h1>Rows</h1>
<%= link_to 'New Row', new_page_row_path(@page) %>
<br><br><br>

<table>
  <thead>
    <tr>
      <th>Word</th>
      <th>Jpn</th>
      <th>Sentense</th>
      <th>Page</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rows.each do |row| %>
      <tr>
        <td><%= row.word %></td>
        <td><%= row.jpn %></td>
        <td><%= row.sentense %></td>
        <td><%= row.page_id %></td>
        <td><%= link_to 'Edit', edit_page_row_path(@page, row) %></td>
        <td><%= link_to 'Destroy', page_row_path(@page, row), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
